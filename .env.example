# App URL
# "http://localhost:3000" or "https://your-domain.com"
NUXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Dataset & Storage (Sanity)
# -----------------------------------------------------------------------------
# https://www.sanity.io/manage
NUXT_PUBLIC_SANITY_PROJECT_ID=
NUXT_PUBLIC_SANITY_DATASET=production
NUXT_SANITY_API_TOKEN=

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
# https://resend.com/api-keys
NUXT_RESEND_API_KEY=
NUXT_RESEND_EMAIL_FROM=onboarding@resend.dev
NUXT_RESEND_EMAIL_ADMIN=
# Newsletter Audience ID (https://resend.com/audiences)
NUXT_RESEND_AUDIENCE_ID=

# -----------------------------------------------------------------------------
# Payment (Stripe)
# -----------------------------------------------------------------------------
# https://dashboard.stripe.com/apikeys
NUXT_STRIPE_SECRET_KEY=
NUXT_STRIPE_WEBHOOK_SECRET=
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NUXT_PUBLIC_STRIPE_PRO_PRICE_ID=
NUXT_PUBLIC_STRIPE_SPONSOR_PRICE_ID=

# -----------------------------------------------------------------------------
# Payment (Creem)
# -----------------------------------------------------------------------------
# https://creem.io/dashboard/developers
# Test Mode API: https://test-api.creem.io
# Production API: https://api.creem.io
NUXT_CREEM_API_KEY=
NUXT_CREEM_WEBHOOK_SECRET=
NUXT_CREEM_TEST_MODE=true
NUXT_PUBLIC_CREEM_PRO_PRODUCT_ID=
NUXT_PUBLIC_CREEM_SPONSOR_PRODUCT_ID=

# -----------------------------------------------------------------------------
# Authentication (Auth.js / NextAuth)
# -----------------------------------------------------------------------------
# Secret can be generated with `openssl rand -base64 32`
NUXT_AUTH_SECRET=

# Google OAuth
# https://console.cloud.google.com/apis/credentials
NUXT_AUTH_GOOGLE_CLIENT_ID=
NUXT_AUTH_GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# https://github.com/settings/developers
NUXT_AUTH_GITHUB_CLIENT_ID=
NUXT_AUTH_GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------
# Google Analytics (https://analytics.google.com)
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# -----------------------------------------------------------------------------
# AI SDK (Optional)
# -----------------------------------------------------------------------------
# Default AI provider: google, deepseek, openai
NUXT_AI_PROVIDER=google

# Google Generative AI (https://aistudio.google.com/apikey)
NUXT_GOOGLE_AI_API_KEY=

# DeepSeek (https://platform.deepseek.com/api_keys)
NUXT_DEEPSEEK_API_KEY=

# OpenAI (https://platform.openai.com/settings/organization/api-keys)
NUXT_OPENAI_API_KEY=
